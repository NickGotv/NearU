<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name='windowActionBar'>false</item>
        <item name='windowNoTitle'>true</item>
    </style>

    <style name='AppThemeLogin.AppBarOverlay' parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name='AppThemeLogin.PoputOverlay' parent="ThemeOverlay.AppCompat.Light"/>

    <style name='AppThemeNearU' parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">0dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name='AppThemeRegist.AppBarOverlay' parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name='AppThemeRegist.PoputOverlay' parent="ThemeOverlay.AppCompat.Light"/>


</resources>
